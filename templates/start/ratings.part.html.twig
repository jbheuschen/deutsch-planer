{% for rating in ratings %}

    {{ include('start/rating.stats.part.html.twig') }}

    <div class="card rating-card">

        <div class="card-header">

            <div class="rating-bar text-center" style="width: 100%">

                {% for i in range(1, (rating.stars + 1)) %}
                    {% if i != 1 %}
                        <span class="star"><i class="fas fa-star star-i"></i></span>
                    {% endif %}
                {% endfor %}

                {% for i in range(1, rating.unstarsb()) %}
                    {% if i != 1 %}
                        <span class="unstar"><i class="far fa-star star-i unstar-i"></i></span>
                    {% endif %}
                {% endfor %}
            </div>

        </div>

        <div class="card-body">

            <div class="row">

                <div class="col-sm-3">

                    <div class="text-center">

                        <div class="row text-center">

                            <div class="col-sm-12">
                                {% if rating.image is null %}
                                    <img src="{{ asset('people/ODU5NTIuanBn.jpg') }}" loading="lazy" class="rounded" width="100" height="100">
                                {% else %}
                                    <img src="{{ asset('people/' ~ rating.image) }}" loading="lazy" class="rounded" width="100" height="100">
                                {% endif %}
                            </div>

                        </div>

                        <div class="row text-center mrt-5">

                            <div class="col-sm-12">
                                <h5>{{ rating.author }}</h5>
                            </div>

                        </div>

                    </div>

                </div>

                <div class="col-sm-9">

                    <i>{{ rating.ratingtext }}</i>

                </div>

            </div>



        </div>

        {% if rating.verified %}

            <div class="card-footer text-center">

                <small class="form-text verified">Verifizierter Kunde</small>

            </div>

        {% endif %}

    </div>

{% else %}

{% endfor %}